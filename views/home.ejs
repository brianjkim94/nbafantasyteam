<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NBA Fantasy Team</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% console.log('---- MESSAGES ------', alerts.success) %>
  <% if (alerts.success) { %>
    <% alerts.success.forEach(msg => { %>
      <div class="alert alert-success"><%= msg %></div>
    <% }) %>
  <% } %>

  <% if (alerts.error) { %>
    <% alerts.error.forEach(msg => { %>
      <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
  <% } %>

  <header>
    <nav class="navbar">
      <ul class="nav-list">
        <li><a href="/">Home</a></li>
        <li><a href="/all-players">All Players</a></li>
        <li><a href="/view-teams">View Teams</a></li>
        <% if(!currentUser) { %> 
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
        <% } else { %> 
          <li><a href="/auth/logout">Logout</a></li>
          <li><a href="/profile">Profile</a></li>
        <% } %> 
      </ul>
    </nav>
  </header>

  <section class="contact" id="contact">
    <div style="display: flex; align-items: center;">
      <img src="/images/nba-logo.jpg" alt="NBA Logo" style="width: 200px; height: auto; margin-right: 20px;">
      <div>
        <h2 class="heading"><span>Create Your NBA Fantasy Team!</span></h2>
        <form action="/save-team" method="post">
          <div class="input-box">
            <label for="teamName">Team Name:</label>
            <input type="text" name="teamName" required>
          </div>
          <div class="input-box">
            <label for="player1">Player 1:</label>
            <input type="text" name="player1" required>
          </div>
          <div class="input-box">
            <label for="player2">Player 2:</label>
            <input type="text" name="player2" required>
          </div>
          <div class="input-box">
            <label for="player3">Player 3:</label>
            <input type="text" name="player3" required>
          </div>
          <div class="input-box">
            <label for="player4">Player 4:</label>
            <input type="text" name="player4" required>
          </div>
          <div class="input-box">
            <label for="player5">Player 5:</label>
            <input type="text" name="player5" required>
          </div>
          <button type="submit" class="btn">Save Team</button>
        </form>
      </div>
    </div>
  </section>
</body>
</html>

